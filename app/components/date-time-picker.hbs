<div class="au-o-grid au-o-grid--small">
  <div class="au-o-grid__item au-u-2-6">
    {{#let (unique-id) as |id|}}
      <AuLabel for={{id}}>Datum</AuLabel>
      <AuDatePicker
        @id={{id}}
        @onChange={{this.onChangeDate}}
        @value={{this.date}}
        @localization={{this.datePickerLocalization}}
      />
    {{/let}}
  </div>
  <div class="au-o-grid__item au-u-2-6 au-u-1-6@medium">
    {{#let (unique-id) as |id|}}
      <AuLabel for={{id}}>Uur</AuLabel>
      <input
        class="au-c-input au-c-input--block"
        type='number'
        value={{this.hours}}
        min={{-1}}
        max={{24}}
        id={{id}}
        {{on "input" (fn this.onChangeTime 'hours')}}
      />
    {{/let}}
  </div>
  <div class="au-o-grid__item au-u-2-6 au-u-1-6@medium">
    {{#let (unique-id) as |id|}}
      <AuLabel for={{id}}>Minuten</AuLabel>
      <input
        class="au-c-input au-c-input--block"
        type='number'
        value={{this.minutes}}
        min={{-1}}
        max={{60}}
        id={{id}}
        {{on "input" (fn this.onChangeTime 'minutes')}}
      />
    {{/let}}
  </div>
</div>
