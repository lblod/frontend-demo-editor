{{#if @show}}
  <div {{did-insert (perform this.fetchData)}}>
    {{#wu-modal
      title="Beheer aanwezigen"
      dialog-class="modal-dialog--wide modal-dialog--sectioned"
      onClose=(action 'togglePopup')
      as |m|}}
        {{#m.content isSectioned=false}}
          {{#if (or (eq this.fetchData.performCount 0) this.fetchData.isRunning)}}
            <p>{{t "participationList.loadingTitle"}}</p>
            <p class="loader"><span class="u-visually-hidden">{{t "participationList.loadingLoader"}}</span></p>
          {{else}}
            <div class="u-spacer">
              <div class="grid">
                <div class="col--6-12">
                  <label class="form__label">
                    {{t "participationListModal.voorzitterLabel"}}
                    <ParticipationList::MandatarisSelector
                      @onSelect={{this.selectVoorzitter}} 
                      @mandataris={{this.voorzitter}}
                      @bestuursorgaan={{@bestuursorgaan}}
                    />
                  </label>
                </div>
              </div>
            </div>
            <div class="u-spacer">
              <div class="grid">
                <div class="col--6-12">
                  <label class="form__label">
                    {{t "participationListModal.secretarisLabel"}}
                    <ParticipationList::FunctionarisSelector
                      @onSelect={{this.selectSecretaris}} 
                      @functionaris={{this.secretaris}} 
                      @bestuursorgaan={{@bestuursorgaan}}
                    />
                  </label>
                </div>
              </div>
            </div>
            <label class="form__label">{{t "participationListModal.presentLabel"}}</label>
            <div class="u-spacer--tb--tiny">
              <ParticipationList::MandatarissenTable
                @mandataris={{this.mandataris}}
                @selected={{@aanwezigenBijStart}}
                @onChange={{this.updateMandatarisTable}}
              />
            </div>
          {{/if}}
          {{yield}}
      {{/m.content}}
      <div class="modal-dialog__footer">
        <AuButtonGroup>
          <AuButton @class="button button--narrow" {{on "click" this.insert}}>{{t "participationListModal.saveButton"}}</AuButton>
          <AuButton @class="button button--narrow" {{on "click" this.togglePopup}}>{{t "participationListModal.cancelButton"}}</AuButton>
        </AuButtonGroup>
      </div>
    {{/wu-modal}}
  </div>
{{/if}}