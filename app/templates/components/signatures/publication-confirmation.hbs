{{#wu-modal
     title=(concat "Bevestig publicatie van " name)
     dialog-class="modal-dialog--wide modal-dialog--sectioned"
     onClose=(action cancel)
     as |m|
}}
  {{#m.content isSectioned=true}}
  <div class="grid u-padding--top">
    <div class="col--7-12">
    	<div class="u-padding--rl--small">
	    	<h2 class="h6">Te publiceren document: {{name}}</h2>
    	</div>
    	<div class="editor__paper">
        {{{mockDocument.body}}}
      </div>
    </div>
    <div class="col--5-12">
    	<div class="u-padding--rl--small">
	    	<h2 class="h6 u-spacer--bottom--small">Publicatie</h2>
        <p class="small u-spacer">Het document en diens inhoud worden publiek gemaakt op de publicatiepagina, vrij toegankelijk voor burgers: <a href="https://publicatie.gelinkt-notuleren.lblod.info/">publicatie.gelinkt-notuleren.lblod.info</a>.</p>
